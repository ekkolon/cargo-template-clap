use crate::error::Result;
use clap::{Parser, Subcommand};

#[derive(Subcommand)]
pub enum Commands {
    /// Initialize a new configuration
    Init {
        #[arg(long)]
        force: bool,
    },
}

#[derive(Parser)]
#[command(name = "{{ crate_command_name }}", version, about, long_about = None)]
pub struct Cli {
    #[command(subcommand)]
    command: Commands,
}

impl Cli {
    pub fn run(&self) -> Result<()> {
        match &self.command {
            _ => Ok(()),
        }
    }
}
