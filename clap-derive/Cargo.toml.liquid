[workspace]
resolver = "3"
members = ["{{ crate_name }}", "{{ crate_binary_name }}"]

[workspace.package]
edition = "2024"
rust-version = "1.85"
version = "0.1.0"
license = "MIT OR Apache-2.0"
authors = ["{{ authors }}"]
description = ""
readme = "README.md"
repository = "https://github.com/myorg/mypackage"
keywords = []
categories = ["command-line-utilities"]


[workspace.dependencies]
clap = { version = "4.5.40", default-features = false, features = ["std"] }
serde = { version = "1.0.219", features = ["derive"] }
serde_json = "1.0.140"
thiserror = "2.0.12"
