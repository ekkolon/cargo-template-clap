[package]
name = "{{ crate_binary_name }}"
build = "build.rs"

rust-version.workspace = true
edition.workspace = true
version.workspace = true
license.workspace = true
repository.workspace = true
authors.workspace = true
categories.workspace = true


[[bin]]
name = "{{ crate_command_name | snake_case }}"
path = "./src/main.rs"


[dependencies]
clap = { workspace = true, features = ["derive", "wrap_help", "string", "env"] }
serde = { workspace = true }
serde_json = { workspace = true }

{{ crate_command_name | snake_case }} = { path = "../{{ crate_name  }}" }


[dev-dependencies]
assert_cmd = "2"
predicates = "3"

[build-dependencies]
{{ crate_command_name | snake_case }} = { path = "../{{ crate_name  }}" }
clap = { workspace = true }
clap_mangen = { version = "0.2.27" }
clap_complete = { version = "4.5" }
